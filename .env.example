# ICT Platform Environment Configuration
# ========================================
# Copy this file to .env and configure your settings
# NEVER commit .env to version control!

# ============================================
# Docker Environment
# ============================================

# HTTP Ports
HTTP_PORT=8080
HTTPS_PORT=8443
PMA_PORT=8081
MAILHOG_WEB=8025
MAILHOG_SMTP=1025
REDIS_PORT=6379
MYSQL_PORT=3306

# ============================================
# Database Configuration
# ============================================

DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_ROOT_PASSWORD=rootpassword
DB_HOST=mysql

# ============================================
# WordPress Configuration
# ============================================

WP_DEBUG=true
WP_MEMORY_LIMIT=256M
WP_MAX_MEMORY_LIMIT=512M

# WordPress Admin (for fresh installs)
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin123
WP_ADMIN_EMAIL=admin@example.com

# ============================================
# Zoho Integration
# ============================================

# Zoho CRM
ZOHO_CRM_CLIENT_ID=your_crm_client_id
ZOHO_CRM_CLIENT_SECRET=your_crm_client_secret
ZOHO_CRM_REDIRECT_URI=https://yoursite.com/wp-admin/

# Zoho FSM (Field Service Management)
ZOHO_FSM_CLIENT_ID=your_fsm_client_id
ZOHO_FSM_CLIENT_SECRET=your_fsm_client_secret

# Zoho Books
ZOHO_BOOKS_CLIENT_ID=your_books_client_id
ZOHO_BOOKS_CLIENT_SECRET=your_books_client_secret
ZOHO_BOOKS_ORG_ID=your_organization_id

# Zoho People
ZOHO_PEOPLE_CLIENT_ID=your_people_client_id
ZOHO_PEOPLE_CLIENT_SECRET=your_people_client_secret

# Zoho Desk
ZOHO_DESK_CLIENT_ID=your_desk_client_id
ZOHO_DESK_CLIENT_SECRET=your_desk_client_secret
ZOHO_DESK_ORG_ID=your_org_id

# ============================================
# QuoteWerks Integration
# ============================================

QUOTEWERKS_API_URL=https://api.quotewerks.com
QUOTEWERKS_API_KEY=your_api_key
QUOTEWERKS_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# Microsoft Teams Integration (Optional)
# ============================================

TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# ============================================
# Encryption Key
# ============================================

# Generate with: openssl rand -base64 32
ICT_ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================
# Deployment Configuration
# ============================================

# Server deployment settings (for make deploy)
DEPLOY_HOST=production.example.com
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/html/wp-content/plugins
DEPLOY_KEY=~/.ssh/deploy_key

# ============================================
# Development Settings
# ============================================

# Enable/disable features during development
DEV_DISABLE_SYNC=false
DEV_MOCK_API=false
DEV_LOG_LEVEL=debug
