{
  "name": "yourname/ict-platform",
  "description": "Complete ICT/electrical contracting operations platform with Zoho integration",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "ICT_Platform\\": "includes/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress includes/ admin/ public/ api/",
    "phpcbf": "phpcbf --standard=WordPress includes/ admin/ public/ api/"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
